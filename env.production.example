# =============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO - MeuPaoZin API
# =============================================================================
# 
# ⚠️  IMPORTANTE: 
# - Substitua todas as senhas e chaves por valores seguros
# - Nunca commite este arquivo no repositório
# - Use variáveis de ambiente ou secrets em produção
# =============================================================================

# =============================================================================
# CONFIGURAÇÕES DA APLICAÇÃO
# =============================================================================
NODE_ENV=production
PORT=3000
API_PREFIX=api
API_VERSION=v1

# =============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS POSTGRESQL
# =============================================================================
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_USERNAME=your-production-db-user
DB_PASSWORD=your-super-secure-production-password
DB_NAME=pedidos_db
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SSL=true

# =============================================================================
# CONFIGURAÇÕES DO KAFKA
# =============================================================================
KAFKA_CLIENT_ID=meu-paozin-api-prod
KAFKA_BROKERS=your-kafka-broker-1:9092,your-kafka-broker-2:9092,your-kafka-broker-3:9092
KAFKA_GROUP_ID=meu-paozin-group-prod
KAFKA_CONSUMER_GROUP_ID=meu-paozin-consumer-group-prod
KAFKA_RETRY_INITIAL_RETRY_TIME=100
KAFKA_RETRY_RETRIES=8

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# CONFIGURAÇÕES DE LOG
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_COLORIZE=false

# =============================================================================
# CONFIGURAÇÕES DE CORS
# =============================================================================
CORS_ORIGIN=https://your-frontend-domain.com
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# =============================================================================
# CONFIGURAÇÕES DE VALIDAÇÃO
# =============================================================================
VALIDATION_WHITELIST=true
VALIDATION_FORBID_NON_WHITELISTED=true
VALIDATION_TRANSFORM=true

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# =============================================================================
# CONFIGURAÇÕES DE RATE LIMITING
# =============================================================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# =============================================================================
# CONFIGURAÇÕES DE CACHE
# =============================================================================
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# =============================================================================
# CONFIGURAÇÕES DE EMAIL (opcional)
# =============================================================================
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@your-domain.com

# =============================================================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES (opcional)
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# =============================================================================
# CONFIGURAÇÕES DE ANALYTICS (opcional)
# =============================================================================
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-api-key

# =============================================================================
# CONFIGURAÇÕES DE BACKUP
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA AVANÇADA
# =============================================================================
HELMET_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
XSS_PROTECTION_ENABLED=true
CONTENT_TYPE_NOSNIFF_ENABLED=true
FRAMEGUARD_ENABLED=true

# =============================================================================
# CONFIGURAÇÕES DE PERFORMANCE
# =============================================================================
COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024
COMPRESSION_LEVEL=6
CLUSTER_ENABLED=true
CLUSTER_WORKERS=4

# =============================================================================
# CONFIGURAÇÕES DE HEALTH CHECK
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# CONFIGURAÇÕES DE MANUTENÇÃO
# =============================================================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Sistema em manutenção. Volte em breve.
MAINTENANCE_ALLOWED_IPS=127.0.0.1,::1

# =============================================================================
# CONFIGURAÇÕES DE DEBUG (desabilitar em produção)
# =============================================================================
DEBUG_ENABLED=false
DEBUG_PORT=9229
DEBUG_HOST=0.0.0.0 