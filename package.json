{
  "name": "meupaozin",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:seed": "docker-compose exec app npm run seed",
    "kafka:init-topics": "docker-compose exec kafka kafka-topics --create --topic pedidos.created --bootstrap-server localhost:9092 --partitions 1 --replication-factor 1 && docker-compose exec kafka kafka-topics --create --topic pedidos.updated --bootstrap-server localhost:9092 --partitions 1 --replication-factor 1 && docker-compose exec kafka kafka-topics --create --topic pedidos.cancelled --bootstrap-server localhost:9092 --partitions 1 --replication-factor 1",
    "kafka:ui": "open http://localhost:8080",
    "kafka:test": "node scripts/test-kafka-events.js",
    "setup:complete": "npm run docker:up && sleep 30 && npm run kafka:init-topics && sleep 10 && npm run docker:seed",
    "datadog:up": "docker-compose -f docker-compose.datadog.yml --profile datadog up -d",
    "datadog:down": "docker-compose -f docker-compose.datadog.yml --profile datadog down",
    "datadog:logs": "docker-compose -f docker-compose.datadog.yml --profile datadog logs -f",
    "datadog:status": "docker-compose -f docker-compose.datadog.yml --profile datadog ps",
    "setup:datadog": "npm run datadog:up && sleep 10 && npm run docker:up",
    "setup:full": "npm run setup:datadog && sleep 30 && npm run kafka:init-topics && sleep 10 && npm run docker:seed"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.0",
    "@nestjs/core": "^10.4.0",
    "@nestjs/platform-express": "^10.4.0",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/typeorm": "^10.0.1",
    "@nestjs/config": "^3.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "kafkajs": "^2.2.4",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.0",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.4.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.4.8",
    "@types/express": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
